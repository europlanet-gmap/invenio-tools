{
  "$id": "planmap_meta.schema.json",

  "title": "GMAP package schema",
  "$comment": "Define GMAP data package structure",

  "type" : "object",

  "definitions": {
    "string_or_null": {
      "anyOf": [
        {"type": "string" },
        {"type": "null" }
      ]
    }
  },

  "properties": {

    "Map version" : { "type": "integer" },
    
    "Title of map": { "type" : "string" },

    "Target body": { "type": "string" },

    "Type": { "type": "string" },

    "Output scale": { "type": "string" },

    "Original Coordinate Reference System": { "type": "string" },

    "Data used": { "type": "string" },

    "DOI of companion paper(s)": { "type": "string" },

    "Short description": { "type": "string" },

    "Heritage used": { "type": "string" },




    "Number of attached textures": { 
      "anyOf": [
        {"type": "string" },
        {"type": "null" }
      ]
    },
    "Modelling method": { 
      "anyOf": [
        {"type": "string" },
        {"type": "null" }
      ]
    },
    "Polygon number": { 
      "anyOf": [
        {"type": "string" },
        {"type": "null" }
      ]
    }
  },

  "patternProperties": {
    "^Aims": { "type": "string" },
    "^Author": { 
      "type" : "array",
      "items": {
        "type": "string"
      }
    },
    "^Acknowledgements": { "$ref" : "#/definitions/string_or_null" },
    "^DOI" : { "$ref" : "#/definitions/string_or_null" },
    "^Link": { "$ref" : "#/definitions/string_or_null" },
    "^Map name": { "type": "string" },
    "^Other comments": { "$ref" : "#/definitions/string_or_null" },
    "^Related products": { "$ref" : "#/definitions/string_or_null" },
    "^Standards": { "$ref" : "#/definitions/string_or_null" },
    "^Stratigraphic info": { "$ref" : "#/definitions/string_or_null" },
    "^Units Definition": { "type": "string" },

    "^Bounding box - Min Lat": { 
      "type" : "number",
      "minimum": -90,
      "exclusiveMaximum": 90
     },

    "^Bounding box - Max Lat": { 
      "type" : "number",
      "exclusiveMinimum": -90,
      "maximum": 90
     },

    "^Bounding box - Min Lon": { 
      "type" : "number",
      "minimum": -180,
      "exclusiveMaximum": 360
     },

    "^Bounding box - Max Lon": { 
      "type" : "number",
      "exclusiveMinimum": -180,
      "maximum": 360
     }

  },

  "additionalProperties": { "type" : "boolean" }
}
