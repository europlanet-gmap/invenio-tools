{
  "$id": "gmap_package.schema.json",

  "title": "GMAP package schema",
  "$comment": "Define GMAP data package structure",

  "type" : "object",

  "properties": {

    "gmap_id": { "type": "string" },
    
    "title": { "type" : "string" },

    "target_body": { "type": "string" },

    "authors": {
      "type" : "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "affiliation": { "type": "string" }
        },
        "required": [ "name" ]
      },
      "minItems": 1
    },

    "bounding_box": { "$ref": "geometry.defs.schema.json#/definitions/polygon" },

    "type": { "enum": ["draft", "released"]},

    "output_scale": { "type": "number" },

    "original_crs": { "type": "string" },

    "data_used": { "type": "string" },

    "standards": { "type": "string" },

    "doi": { "type": "string" },

    "aims": { "type": "string" },

    "description": { "type": "string" },

    "relared_products": { "type": "string" },

    "units": { "type": "string" },

    "stratigraphic_info": { "type": "string" },

    "comments": { "type": "string" },

    "heritage": { "type": "string" },

    "other_data": { "type": "string" },

    "acknowledgements": { "type": "string" }
  },

  "required" : [
    "gmap_id",
    "title",
    "creators",
    "resource_type",
    "publication_date"
  ]
}
